<div class="container">
  <h3><%= @restaurant.name %></h3>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.phone_number %></p>
  <p><%= @restaurant.category %></p>

  <hr>
  <p> Restaurant's reviews </p>
  <ul>
    <% @restaurant.reviews.each do |review| %>
      <li><%= review.content %>
      <%= review.rating %></li>
    <% end %>
  </ul>

  <hr>
  <%= link_to "new review", new_restaurant_review_path(@restaurant, @review),
   class: "btn btn-primary" %>


  <hr>
  <%= link_to restaurants_path do %>
    <i class="fa fa-history"></i>Back to list
  <% end %>


</div>
